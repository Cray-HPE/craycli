                                    "aggregated": {
                                        "value": {
                                            "rack1": {
                                                "Management Master Nodes": [
                                                    "ncn-m001",
                                                    "ncn-m002"
                                                ],
                                                "Management Storage Nodes": [
                                                    "ncn-s003"
                                                ],
                                                "Management Worker Nodes": []
                                            },
                                            "rack2": {
                                                "Management Master Nodes": [
                                                    "ncn-m003"
                                                ],
                                                "Management Storage Nodes": [
                                                    "ncn-s002",
                                                    "ncn-s001"
                                                ],
                                                "Management Worker Nodes": [
                                                    "ncn-w001",
                                                    "ncn-w003"
                                                ]
                                            },
                                            "rack3": {
                                                "Management Master Nodes": [],
                                                "Management Storage Nodes": [],
                                                "Management Worker Nodes": [
                                                    "ncn-w002",
                                                    "ncn-w004"
