                                                            },
                                                            "status": {
                                                                "type": "string",
                                                                "description": "The node's status (e.g., Ready, NotReady)."
                                                            },
                                                            "osds": {
                                                                "type": "array",
                                                                "description": "List of OSD details (only applicable for storage nodes).",
                                                                "items": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "name": {
                                                                            "type": "string",
                                                                            "description": "The OSD's name."
                                                                        },
                                                                        "status": {
                                                                            "type": "string",
                                                                            "description": "The OSD's status (e.g., up, down)."
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
